{
    "manifest_version": 2,
    "name": "Google Reverse Image Seach Webextension",
    "version": "1.0",

    "description": "Adds Google Image Search to right-click menu on images.",

    "icons": {
        "48": "img/icon.png"
    },

    "background":{
        "scripts": ["search.js"]
    },
    
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
      }
    ],
    
    "permissions":[
        "contextMenus",
        "tabs"
    ]
}